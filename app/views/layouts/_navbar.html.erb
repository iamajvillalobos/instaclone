<div class="navbar is-black">
  <div class="navbar-brand">
    <%= link_to "Instaclone", root_path, class: "navbar-item" %>
  </div>

  <div class="navbar-menu">
    <% if user_signed_in? %>
      <div class="navbar-start">
        <%= link_to "Home", photos_path, class: "navbar-item" %>
        <%= link_to "Profile", profiles_path, class: "navbar-item" %>
      </div>
    <% end %>

    <div class="navbar-end">
      <% if user_signed_in? %>
        <%= link_to "Upload", new_photo_path, class: "navbar-item" %>
        <%= link_to current_user.username, profile_path(current_user.username), class: "navbar-item" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-item" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "navbar-item" %>
      <% end %>
    </div>
  </div>
</div>